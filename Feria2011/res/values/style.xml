	<!-- Base application theme is the default theme. -->
	<style name="Theme" parent="android:Theme"></style>

	<!-- Variation on the Light theme that turns off the title -->
	<style name="Theme.Feria" parent="android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:textColor">@android:color/black</item>
	</style>

	<style name="MediaButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/foreground1</item>
		<item name="android:background">@null</item>
	</style>
	<style name="MainButton">
		<item name="android:textSize">21dp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">.5</item>
		<item name="android:background">@null</item>
	</style>

	<style name="DetalleButton1">
		<item name="android:textSize">16dp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:textColor">@color/detalle_evento.ColorFuente</item>
	</style>
	
	<style name="DetalleButton2">
		<item name="android:textSize">16dp</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">.333333333333333333333333333333333333333333</item>
		<item name="android:textColor">@color/detalle_evento.ColorFuente</item>
		<item name="android:paddingTop">15dp</item>
	</style>
	
	<style name="Detalles">
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
	</style>
	
	<style name="EventoButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingBottom">15dp</item>
	</style>
	
</resources>