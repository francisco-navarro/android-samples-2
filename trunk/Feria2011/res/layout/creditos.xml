<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:background="#a4ca39" android:gravity="center" >
	<ImageView 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:background="@drawable/creditos"
		android:gravity="bottom" 
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="45dp"
		android:layout_marginRight="45dp"
		android:paddingTop="45dp"

		android:layout_weight="0.4" />
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:background="#a4ca39"
		android:gravity="bottom"  >
		<TextView android:textColor="@color/title_text" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="http://www.albandroid.es">
		</TextView>
		<TextView 
		android:textColor="@color/title_text"
		android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="info@albandroid.es">
		</TextView>
		<TextView 
		android:textColor="@color/title_text"
		android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Escuela de Ingenieros Industriales - Aula 1.6">
		</TextView>

	</LinearLayout>
	<ListView  android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="0.6" android:background="#FFFFFF"/>
</LinearLayout>
